{
    "name": "projectify-app",
    "version": "1.0.0",
    "description": "Project Management App",
    "main": "index.js",
    "scripts": {
        "start:dev": "NODE_ENV=development ts-node-dev --clear --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "build:prod": "npm install && npm run prisma:g && npm run build",
        "prisma:g": "npx prisma generate --schema=./src/prisma/schema.prisma",
        "db:p": "npx prisma db push --schema=./src/prisma/schema.prisma"
    },
    "author": "Ali Ramazon",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^5.3.1",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cookie-signature": "^1.2.1",
        "cors": "^2.8.5",
        "crypto-js": "^4.1.1",
        "express": "^4.18.2",
        "joi": "^17.13.1",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^6.9.5",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.13.0",
        "@types/nodemailer": "^6.4.15",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "@typescript-eslint/parser": "^7.11.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.3.0",
        "prisma": "^5.3.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.5"
    },

    "engines": {
        "node": "20.7.0"
    }
}
